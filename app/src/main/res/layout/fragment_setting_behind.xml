<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_setting_behind"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSettingBg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:id="@+id/rly_setting_behind_sound"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/selector_setting_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:tag="com.mesada.me.views.UserInfoActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="录音"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switch_setting_behind_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#a9a9a9" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rly_setting_behind_watermark"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/selector_setting_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:tag="com.mesada.me.views.UserInfoActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="视频水印"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switch_setting_behind_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#a9a9a9" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rly_setting_behind_autorun"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/selector_setting_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:tag="com.mesada.me.views.UserInfoActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="录制启动设置"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Switch
            android:id="@+id/switch_setting_behind_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#a9a9a9" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/selector_setting_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:tag="com.mesada.me.views.UserInfoActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="视频分辨率"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_arrows" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#a9a9a9" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/selector_setting_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:tag="com.mesada.me.views.UserInfoActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="紧急保持时间设置"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_arrows" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#a9a9a9" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/selector_setting_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:tag="com.mesada.me.views.UserInfoActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="录制视频大小"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_arrows" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#a9a9a9" />
    </RelativeLayout>
</LinearLayout>


