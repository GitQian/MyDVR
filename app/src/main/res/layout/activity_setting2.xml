<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F3F3F"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.xinzhihui.mydvr.Setting2Activity">

    <RadioGroup
        android:id="@+id/rg_setting_select"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbtn_setting_general"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_filelist_lock"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="通用设置"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rbtn_setting_front"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_filelist_lock"
            android:button="@null"
            android:gravity="center"
            android:text="前摄像头"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rbtn_setting_behind"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_filelist_lock"
            android:button="@null"
            android:gravity="center"
            android:text="后摄像头"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </RadioGroup>

    <FrameLayout
        android:id="@+id/fragment_setting_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/rg_setting_select"></FrameLayout>

</RelativeLayout>
